<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= page_description %>">
    <meta name="keywords" content="<%= page_keywords %>">
    <meta name="author" content="PerkyCrow">

    <% if page_url %>
      <meta property="og:url" content="<%= page_url %>">
    <% end %>
    <meta property="og:title" content="<%= page_title %>">
    <meta property="og:description" content="<%= page_description %>">
    <% if page_image %>
      <meta property="og:image" content="<%= page_image %>">
    <% end %>

    <meta priority="og:site_name" content="PerkyCrow">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag 'favicon.ico', rel: 'icon', type: 'image/x-icon', 'data-turbo-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico', rel: 'shortcut icon', type: 'image/x-icon', 'data-turbo-track': 'reload' %>
    <%= favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon', type: 'image/png', 'data-turbo-track': 'reload' %>
    <%= favicon_link_tag 'android-chrome-192x192.png', rel: 'icon', sizes: '192x192', type: 'image/png', 'data-turbo-track': 'reload' %>
    <%= favicon_link_tag 'android-chrome-512x512.png', rel: 'icon', sizes: '512x512', type: 'image/png', 'data-turbo-track': 'reload' %>

    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Cinzel:wght@600&family=Quicksand:wght@400;600&display=swap', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:controller].parameterize %> <%= params[:action].parameterize %> <%= @body_class %>">

    <%= render "shared/flash" %>
    <%= render "shared/header" %>

    <div id="main">
      <%= yield %>
    </div>

    <%= render "shared/footer" %>

  </body>
</html>
